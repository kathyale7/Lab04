<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InsertarExample">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" android:gravity="center">
        <Space
                android:layout_width="match_parent"
                android:layout_height="33dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:textColor="#000000"
                android:padding="30dp"
                android:text="Registrar Carrera" android:fontFamily="sans-serif-black"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:typeface="sans"
                android:lineSpacingExtra="8sp" android:textStyle="bold" android:textAlignment="center"
                android:id="@+id/textView2"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
        <EditText
                android:id="@+id/new_user_name"
                android:hint="Nombre de la carrera"
                android:textColor="#575656"
                android:textColorHint="#A3A3A3"
                android:textAlignment="center"
                android:layout_width="386dp"
                android:layout_height="wrap_content" android:minHeight="48dp" android:textColorHighlight="#373737"
                android:textColorLink="#00233E"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="22dp"/>
        <EditText
                android:id="@+id/new_name"
                android:hint="Codigo"
                android:textColor="#575656"
                android:textColorHint="#A3A3A3"
                android:textAlignment="center"
                android:layout_width="385dp"
                android:layout_height="wrap_content" android:minHeight="48dp" android:textColorHighlight="#373737"
                android:textColorLink="#00233E"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="22dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="363dp"
                android:layout_height="93dp" android:gravity="center"
        >
            <Button
                    android:id="@+id/btn_register"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content" android:fontFamily="sans-serif-thin" android:textSize="16sp"
                    android:background="@drawable/rounded_corner" android:textStyle="bold"
                    app:backgroundTint="#000000" app:cornerRadius="15dp" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>