<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Seguridad">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/purple_200">
        <Space
                android:layout_width="match_parent"
                android:layout_height="246dp"/>
        <TextView
                android:text="Seleccione que desea actualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold" android:textColor="@color/black" android:textSize="16sp"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="75dp" android:id="@+id/spin_seguridad" tools:ignore="SpeakableTextPresentCheck"/>

        <Button
                android:text="Continuar"
                android:layout_width="159dp"
                android:layout_height="wrap_content" android:id="@+id/btn_seguridad" android:textAllCaps="false"
                app:backgroundTint="@color/black" android:layout_gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>