<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Matricula">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="410dp"
            android:layout_height="703dp" android:id="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent">
        <ImageView
                android:layout_width="142dp"
                android:layout_height="85dp" app:srcCompat="@drawable/ic_form_new_28_regular"
                android:id="@+id/imageView3"
                android:layout_weight="1" android:tint="@color/purple_500" tools:ignore="VectorDrawableCompat"/>
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="78dp" android:layout_weight="1">
            <TextView
                    android:text="Matricula"
                    android:layout_width="266dp"
                    android:layout_height="43dp" android:id="@+id/bannerJobApplication3" android:layout_weight="1"
                    android:textStyle="bold" android:textColor="@color/black" android:textAlignment="viewStart"
                    android:textSize="24sp" android:editable="false" android:fontFamily="@font/poppins"/>
            <TextView
                    android:text="Ingrese la información para ingresar una matricula nueva."
                    android:layout_width="230dp"
                    android:layout_height="45dp" android:id="@+id/bannerJobDescription3" android:layout_weight="1"
                    android:textColor="#000000" android:textSize="14sp" android:textAlignment="viewStart"
                    android:editable="false" android:duplicateParentState="false" android:fontFamily="@font/poppins"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="359dp"
            android:layout_height="499dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" android:layout_marginTop="104dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    >
        <Space
                android:layout_width="match_parent"
                android:layout_height="130dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="ID Alumno"
                    android:layout_width="118dp"
                    android:layout_height="34dp" android:id="@+id/txtCodigo" android:textSize="16sp"
                    android:textStyle="bold" android:textColor="#000000" android:fontFamily="@font/poppins"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/txtInsertalumno_id" android:layout_weight="1"
                    android:hint="3000" android:textSize="16sp"
                    tools:ignore="TouchTargetSizeCheck" android:fontFamily="@font/poppins"/>
        </LinearLayout>



        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="ID Curso"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"
                    android:textSize="16sp" android:textColor="#000000"
                    android:textAlignment="textStart" android:textStyle="bold" android:fontFamily="@font/poppins"/>
            <EditText
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/txtInsertarcurso_id" android:layout_weight="1"
                    android:textSize="16sp" tools:ignore="TouchTargetSizeCheck"
                    android:fontFamily="@font/poppins" android:hint="302"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="N° Grupo"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                    android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"
                    android:fontFamily="@font/poppins"/>
            <EditText
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/txtInsertnum_grupo" android:layout_weight="1" android:hint="1"
                    android:textSize="16sp" tools:ignore="TouchTargetSizeCheck" android:fontFamily="@font/poppins"/>

        </LinearLayout>

        <Space
                android:layout_width="match_parent"
                android:layout_height="42dp"/>
        <Button
                android:text="Agregar Matricula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnInMatricula"
                style="@style/Widget.AppCompat.Button" app:cornerRadius="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textStyle="bold"
                android:textSize="16sp" android:textAlignment="center" android:textAllCaps="false"
                app:backgroundTint="@color/black"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>